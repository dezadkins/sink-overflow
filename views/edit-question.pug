extends layout.pug

include utils.pug

append head
  script(src="/javascripts/demo.js" type="module" async defer)
  link(rel="stylesheet" href="/stylesheets/new-question.css")

block content
    include top-nav
    include side-nav
    div.main
        div.form-elements
            h2 Edit question
            +validationErrorSummary(errors)
            form(method="post" action=`/questions/${question.id}`)
                input(type="hidden" name="_csrf" value=csrfToken)
                div.form-elements__title
                    label(for="title") Title:
                    input.form-elements__title__input(required type="text" id="title" name="title" value= question.title )
                div.form-elements__content
                    label(for="content") Question:
                    textarea.form-elements__content__input(required name="content" maxlength=255)= question.content
                div.form-elements__buttons
                    input.form-elements__buttons__submit(type="submit" value="Submit")
                    a.form-elements__buttons__cancel(href=`/questions/${question.id}`) Cancel
